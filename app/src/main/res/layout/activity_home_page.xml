<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clickable="false"
    tools:context=".Home_Page">

    <TextView
        android:id="@+id/Text_HP_Background"
        android:layout_width="326dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        android:foreground="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Button_HP_Logout"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Button_HP_Achievement"
        app:layout_constraintTop_toBottomOf="@+id/Button_HP_Achievement" />

    <Button
        android:id="@+id/Button_HP_Settings"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Button_HP_Leaderboard"
        app:layout_constraintTop_toBottomOf="@+id/Button_HP_Leaderboard" />

    <Button
        android:id="@+id/Button_HP_Achievement"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Achievement"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Button_HP_Friend"
        app:layout_constraintTop_toBottomOf="@+id/Button_HP_Friend" />

    <Button
        android:id="@+id/Button_HP_Leaderboard"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Leaderboard"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Button_HP_Game"
        app:layout_constraintTop_toBottomOf="@+id/Button_HP_Game" />

    <ImageView
        android:id="@+id/Image_HP_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/Text_HP_Background"
        app:layout_constraintTop_toTopOf="@+id/Text_HP_Background"
        android:src="@drawable/mathlogo" />

    <TextView
        android:id="@+id/Text_HP_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:text="User Name"
        app:layout_constraintStart_toEndOf="@+id/Image_HP_Profile"
        app:layout_constraintTop_toTopOf="@+id/Text_HP_Background" />

    <TextView
        android:id="@+id/Text_HP_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="Total Score"
        app:layout_constraintStart_toEndOf="@+id/Image_HP_Profile"
        app:layout_constraintTop_toBottomOf="@+id/Text_HP_Name" />

    <Button
        android:id="@+id/Button_HP_Game"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Game"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/Text_HP_Background"
        app:layout_constraintTop_toBottomOf="@+id/Text_HP_Background" />

    <Button
        android:id="@+id/Button_HP_Friend"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="48dp"
        android:text="Friends"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/Button_HP_Game"
        app:layout_constraintTop_toBottomOf="@+id/Text_HP_Background" />

</androidx.constraintlayout.widget.ConstraintLayout>