<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/Input_R_LoginID"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Text_R_LoginID"
        app:layout_constraintTop_toBottomOf="@+id/Input_R_Email" />

    <EditText
        android:id="@+id/Input_R_Email"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Text_R_Email"
        app:layout_constraintTop_toBottomOf="@+id/Text_R_MathApp" />

    <EditText
        android:id="@+id/Input_R_Password"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="92dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Text_R_Password"
        app:layout_constraintTop_toBottomOf="@+id/Input_R_LoginID" />

    <TextView
        android:id="@+id/Text_R_LoginID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="56dp"
        android:text="login id:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Input_R_LoginID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_R_Email" />

    <TextView
        android:id="@+id/Text_R_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="52dp"
        android:text="password:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Input_R_Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_R_LoginID" />

    <TextView
        android:id="@+id/Text_R_MathApp"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="135dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="MathApp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Image_R_MathApp" />

    <TextView
        android:id="@+id/Text_R_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="email address:"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Input_R_Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_R_MathApp" />

    <Button
        android:id="@+id/Button_R_Back"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2B48FA"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_R_NewAccount" />

    <Button
        android:id="@+id/Button_R_NewAccount"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2B48FA"
        android:text="Create new account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input_R_Password" />

    <ImageView
        android:id="@+id/Image_R_MathApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="144dp"
        android:src="@drawable/mathlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>