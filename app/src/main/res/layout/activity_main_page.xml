<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Main_Page">

    <Button
        android:id="@+id/Button_MP_Register"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2B48FA"
        android:text="register"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_MP_ForgotPassword" />

    <Button
        android:id="@+id/Button_MP_ForgotPassword"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2B48FA"
        android:text="forgot password"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_MP_Login" />

    <Button
        android:id="@+id/Button_MP_Login"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="#2B48FA"
        android:text="Login"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input_MP_Password" />

    <EditText
        android:id="@+id/Input_MP_LoginID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="84dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Text_MP_LoginID"
        app:layout_constraintTop_toBottomOf="@+id/Text_MP_MathApp" />

    <EditText
        android:id="@+id/Input_MP_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="84dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Text_MP_Password"
        app:layout_constraintTop_toBottomOf="@+id/Input_MP_LoginID" />

    <TextView
        android:id="@+id/Text_MP_LoginID"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:text="Login ID:"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Input_MP_LoginID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_MP_MathApp" />

    <TextView
        android:id="@+id/Text_MP_Password"
        android:layout_width="79dp"
        android:layout_height="33dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        android:text="Password:"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/Input_MP_Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_MP_LoginID" />

    <TextView
        android:id="@+id/Text_MP_MathApp"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="135dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="MathApp"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Image_MP_MathApp" />

    <ImageView
        android:id="@+id/Image_MP_MathApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="145dp"
        android:src="@drawable/mathlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>