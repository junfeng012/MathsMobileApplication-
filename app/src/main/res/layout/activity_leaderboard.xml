<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Leaderboard">

    <Button
        android:id="@+id/Button_L_Back"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginTop="68dp"
        android:text="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/List_L_LeaderboardName" />

    <TextView
        android:id="@+id/Text_L_Leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Leaderboard"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Text_L_Background"
        app:layout_constraintStart_toStartOf="@+id/Text_L_Background"
        app:layout_constraintTop_toBottomOf="@+id/Text_L_Background" />

    <TextView
        android:id="@+id/Text_L_Background"
        android:layout_width="326dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        android:foreground="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Image_L_Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/Text_L_Background"
        app:layout_constraintTop_toTopOf="@+id/Text_L_Background"
        android:src="@drawable/mathlogo" />

    <TextView
        android:id="@+id/Text_L_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:text="Score"
        app:layout_constraintStart_toEndOf="@+id/Image_L_Profile"
        app:layout_constraintTop_toBottomOf="@+id/Text_L_Name" />

    <TextView
        android:id="@+id/Text_L_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:text="User Name"
        app:layout_constraintStart_toEndOf="@+id/Image_L_Profile"
        app:layout_constraintTop_toTopOf="@+id/Text_L_Background" />

    <ListView
        android:id="@+id/List_L_LeaderboardName"
        android:layout_width="326dp"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/Text_L_Background"
        app:layout_constraintStart_toStartOf="@+id/Text_L_Background"
        app:layout_constraintTop_toBottomOf="@+id/Text_L_LName" />

    <TextView
        android:id="@+id/Text_L_LName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/List_L_LeaderboardName"
        app:layout_constraintStart_toStartOf="@+id/List_L_LeaderboardName"
        app:layout_constraintTop_toBottomOf="@+id/Text_L_Leaderboard" />

</androidx.constraintlayout.widget.ConstraintLayout>