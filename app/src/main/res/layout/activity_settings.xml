<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <Button
        android:id="@+id/Button_S_Back"
        android:layout_width="206dp"
        android:layout_height="51dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="112dp"
        android:backgroundTint="#2B48FA"
        android:text="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="324dp"
        android:layout_height="253dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="47dp"
        android:foreground="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text_S_Settings" />





    <Switch
        android:id="@+id/Switch_S_SoundEffects"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/Text_S_SoundEffects" />

    <TextView
        android:id="@+id/Text_S_SoundEffects"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Sound Effects"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/Text_S_Music" />

    <Switch
        android:id="@+id/Switch_S_Music"
        android:layout_width="54dp"
        android:layout_height="40dp"
        android:layout_marginEnd="30dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/Text_S_Music" />

    <TextView
        android:id="@+id/Text_S_Music"
        android:layout_width="113dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Music"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/Text_S_Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="137dp"
        android:text="Settings"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>